/* spellcheck-off */
{
  // "git.enabled": false, // disable git features when too much WIP makes it slow
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "update.channel": "none", // no need on Linux
  "window.restoreWindows": "all",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.enableExperiments": false,
  // "workbench.fontAliasing": "auto", // macOS
  "workbench.tips.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment, punctuation.definition.comment",
        "settings": {
          "foreground": "#5C6370"
        }
      }
    ]
  },
  "editor.smoothScrolling": true, // fix choppy scroll
  "editor.snippetSuggestions": "top",
  "editor.folding": false,
  "editor.accessibilitySupport": "off",
  "editor.fontSize": 16,
  "editor.fontFamily": "'Roboto Mono', monospace",
  "editor.fontWeight": "500",
  "editor.rulers": [80, 100],
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "breadcrumbs.enabled": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.eslintcache": true,
    "**/.git": true,
    "**/.stylelintcache": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.sapper": true,
    "**/.stylelintcache": true,
    "**/.vscode": true,
    "**/*.log": true,
    "**/*.map": true,
    "**/*.min.*": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/export/**": true,
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/public/**": true,
    "**/tmp/**": true,
    "**/yarn.lock": true
  },
  "files.associations": {
    "*.css": "scss", // better syntax highlighting for minna-ui
    "*.vue": "html",
  },
  "git.confirmSync": false,
  "git.autofetch": true,
  "npm.exclude": ["**/.git", "**/node_modules"],
  "npm.packageManager": "yarn",
  "extensions.showRecommendationsOnlyOnDemand": true,
  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  "javascript.format.enable": false,
  "[markdown]": {
    "editor.lineNumbers": "interval",
    "editor.rulers": [],
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.quickSuggestions": false,
    "files.trimTrailingWhitespace": false
  },
  // "todohighlight.keywords": [
  //   {
  //     "text": "XXX:", // for implementation details or notes
  //     "color": "#ecf2fa",
  //     "backgroundColor": "#3477ca"
  //   },
  //   "NOTE:",
  //   "README:",
  //   "REFERENCE:",
  //   "TIPS:",
  //   "USAGE:",
  // ],
  // "todohighlight.defaultStyle": {
  //   "color": "unset",
  //   "backgroundColor": "unset",
  //   "overviewRulerColor": "grey",
  // },
  "eslint.validate": ["html", "javascript", "javascriptreact"],
  "eslint.packageManager": "yarn",
  "tslint.jsEnable": true,
  "spellright.configurationScope": "user",
  "spellright.notificationClass": "information",
  "spellright.language": ["en_GB"],
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "json",
    "jsonc",
    "markdown",
    "plaintext",
    "properties",
    "scss",
    "todo",
    "typescript",
    "typescriptreact"
  ],
  "spellright.spellContext": "body code comments strings",
  "spellright.suggestionsInHints": false,
  "spellright.ignoreFiles": [
    "**/.gitignore",
    "**/.spellignore",
    "**/*.log",
    "**/package-lock.json",
    "**/tsconfig.json",
    "**/yarn.lock"
  ],
  // "gitlens.advanced.messages": {
  //   "suppressUpdateNotice": true,
  //   "suppressWelcomeNotice": true,
  // },
  // "gitlens.keymap": "none",
  "atomKeymap.promptV3Features": true,
