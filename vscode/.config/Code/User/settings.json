{
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "update.channel": "none", // no need on Arch Linux when using AUR
  "window.restoreWindows": "all",
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "One Dark Pro Vivid",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment, punctuation.definition.comment",
        "settings": {
          "foreground": "#5C6370"
        }
      },
      {
        "scope": "comment.line.double-slash,comment.block.documentation",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.smoothScrolling": true,
  "editor.snippetSuggestions": "top",
  "editor.folding": false,
  "editor.accessibilitySupport": "off",
  // "editor.fontSize": 15,
  "editor.fontSize": 16,
  // "editor.fontFamily": "'Roboto Mono Medium'",
  "editor.fontFamily": "'Roboto Mono'",
  "editor.rulers": [80, 100],
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  // "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnPaste": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true
  },
  "files.watcherExclude": {
    "**/.vscode": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/export/**": true,
    "**/public/**": true,
    "**/tmp/**": true,
    "**/.sapper": true,
    "**/*.min.*": true,
    "**/*.map": true,
    "**/*.log": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },
  "git.confirmSync": false,
  "git.autofetch": true,
  "css.validate": false,
  "extensions.ignoreRecommendations": true,
  "npm.enableScriptExplorer": true,
  "npm.exclude": [
    "**/.git",
    "**/node_modules",
  ],
  "npm.packageManager": "yarn",
  "todohighlight.keywords": [
    {
      "text": "XXX:", // for implementation details or notes
      "color": "#ecf2fa",
      "backgroundColor": "#3477ca"
    },
    "README:",
    "NOTE:",
    "REF:" // reference (e.g. a link to an article)
  ],
  "todohighlight.defaultStyle": {
    "color": "unset",
    "backgroundColor": "unset",
    "overviewRulerColor": "grey"
  },
  // "emmet.showSuggestionsAsSnippets": true,
  "javascript.implicitProjectConfig.checkJs": true,
  "eslint.validate": ["html", "javascript", "javascriptreact"],
  "projectManager.treeview.visible": false,
  "projectManager.groupList": true,
  "projectManager.git.baseFolders": ["/home/max/Development"],
  "projectManager.vscode.baseFolders": ["/home/max/Development"],
  "projectManager.svn.maxDepthRecursion": 1,
  "projectManager.git.ignoredFolders": [
    "dist",
    "export",
    "node_modules",
    "public",
    "test",
    "typings"
  ],
  "projectManager.vscode.ignoredFolders": [
    "dist",
    "export",
    "node_modules",
    "public",
    "test",
    "typings"
  ],
  "atomKeymap.promptV3Features": true,
  "javascript.implicitProjectConfig.experimentalDecorators": true,
  "files.associations": {
    "*.vue": "html"
  },
  "[markdown]": {
    "editor.lineNumbers": "interval",
    "editor.rulers": [],
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.quickSuggestions": false
  },
  "spellright.language": "en_AU",
  "spellright.suggestionsInHints": false,
  "spellright.configurationUpdate": false,
  "spellright.notificationClass": "warning",
  "spellright.spellContext": "body code comments strings",
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "plaintext",
    "postcss",
    "terraform",
    "text",
    "yml"
  ],
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.keymap": "none",
  "gitlens.gitExplorer.enabled": false,
  "gitlens.historyExplorer.enabled": false,
  "eslint.packageManager": "yarn",
  "tslint.packageManager": "yarn",
  "tslint.jsEnable": true
}
