// spellcheck-off
{
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "update.channel": "none", // no need on Linux
  "window.restoreWindows": "all",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.enableExperiments": false,
  // "workbench.fontAliasing": "auto", // macOS
  "workbench.settings.editor": "json",
  "workbench.tips.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment, punctuation.definition.comment",
        "settings": {
          "foreground": "#5C6370"
        }
      },
    ]
  },
  "editor.smoothScrolling": true, // otherwise choppy scroll on Linux
  "editor.snippetSuggestions": "top",
  "editor.folding": false,
  "editor.accessibilitySupport": "off",
  "editor.fontSize": 16,
  "editor.fontFamily": "'Roboto Mono Medium'",
  "editor.rulers": [80, 100],
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.formatOnPaste": true,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "breadcrumbs.enabled": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.stylelintcache": true,
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.sapper": true,
    "**/.stylelintcache": true,
    "**/.vscode": true,
    "**/*.log": true,
    "**/*.map": true,
    "**/*.min.*": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/dist/**": true,
    "**/export/**": true,
    "**/node_modules/**": true,
    "**/package-lock.json": true,
    "**/public/**": true,
    "**/tmp/**": true,
    "**/yarn.lock": true
  },
  "files.associations": {
    "*.css": "scss", // better syntax highlighting for PostCSS
    "*.vue": "html"
  },
  "git.confirmSync": false,
  "git.autofetch": true,
  "npm.exclude": [
    "**/.git",
    "**/node_modules",
  ],
  "npm.packageManager": "yarn",
  "extensions.showRecommendationsOnlyOnDemand": true,
  "javascript.implicitProjectConfig.checkJs": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.implementationsCodeLens.enabled": true,
  "[markdown]": {
    "editor.lineNumbers": "interval",
    "editor.rulers": [],
    "editor.wordWrap": "bounded",
    "editor.wrappingIndent": "indent",
    "editor.quickSuggestions": false,
    "files.trimTrailingWhitespace": false
  },
  "todohighlight.keywords": [
    {
      "text": "XXX:", // for implementation details or notes
      "color": "#ecf2fa",
      "backgroundColor": "#3477ca"
    },
    "README:",
    "NOTE:",
    "REF:" // reference (e.g. a link to an article)
  ],
  "todohighlight.defaultStyle": {
    "color": "unset",
    "backgroundColor": "unset",
    "overviewRulerColor": "grey"
  },
  "eslint.validate": ["html", "javascript", "javascriptreact"],
  "eslint.packageManager": "yarn",
  // "tslint.packageManager": "yarn",
  // "tslint.jsEnable": true,
  "spellright.language": ["en_AU"],
  "spellright.notificationClass": "hint",
  "spellright.spellContext": "body code comments strings",
  "spellright.documentTypes": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "less",
    "markdown",
    "plaintext",
    "postcss",
    "sass",
    "terraform",
    "typescript",
    "typescriptreact",
    "text",
    "toml",
    "yml"
  ],
  "spellright.ignoreFiles": [
    "**/.gitignore",
    "**/.spellignore",
    "**/*.log",
    "**/package-lock.json",
    "**/yarn.lock"
  ],
  "gitlens.advanced.messages": {
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.keymap": "none",

  // EXPERIMENTS
  "javascript.format.enable": false,
  "prettier.eslintIntegration": true,
}
